package utils {		import flash.display.MovieClip;		import be.viplib.util.ColorUtil;		public class Buttons extends MovieClip {		public function Buttons() {		}				public static function addButton(t:MovieClip, posX:int = 0, posY:int = 0, color:String = 'blue'):void {			var colors:Object = {				'blue':    0x2D8EAC,				'red':     0xDB2D1F,				'brown':   0x33190D,				'purple':  0xD10053,				'green':   0x69A733,				'yellow':  0xF3A831			};						var button:MovieClip = new MovieClip();			var button2:MovieClip = new MovieClip();						button.graphics.beginFill(colors[color]);			button.graphics.drawRoundRect(0, 0, 390, 180, 10);			button.graphics.endFill();			button.x = posX;			button.y = posY;						// 3D Effect			//button2.graphics.beginFill(0x1A4B5A);			button2.graphics.beginFill(ColorUtil.darkenColor(colors[color],20));			button2.graphics.drawRoundRect(0, 0, 390, 180, 10);			button2.graphics.endFill();			button2.x = posX;			button2.y = posY+10;			//button2.name = "Button";						t.addChild(button2);			t.addChild(button);		}	}	}